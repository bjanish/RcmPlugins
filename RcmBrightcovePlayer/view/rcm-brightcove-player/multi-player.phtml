            <div
                class="videoAreaWrap"
                id="tabs-{{key}}"
                ng-repeat="(key,playlist) in playlists"
                >
                <a href="javascript:void(0)"
                   onclick="bgPlayerApi<?php echo $this->instanceId; ?>.loadVideoById({{video.id}})" class="videoArea"
                   ng-repeat="video in playlist.videos">
                    <img src="{{video.thumbnailURL}}" width="135px" height="70px"/>
                </a>
            </div>
        </div>
    </div>
