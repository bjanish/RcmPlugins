<div class="hide-vid">
    <div style="float: right;"
         rcm-brightcove-player-download-link="<?= $instanceId ?>"
        >
    </div>
    <div style="clear: both"></div>
    <br/>

    <div rcm-brightcove-player-tabs="<?= $instanceId ?>"
         rcm-brightcove-player-tabs-config="<?=
         htmlentities(json_encode($instanceConfig))
         ?>"
        >
        <div id="downloadLink"></div>

        <pre>XXX{{playlists.length | json}}</pre>

        <div XXXdata-hbo-tabs class="rcm-brightcove-player-tabs-wrapper">

            <div class="video"
                 id="brightcoveObject"
                 rcm-brightcove-player="<?= $instanceId ?>"
                 rcm-brightcove-player-config="<?=
                 htmlentities(json_encode($instanceConfig))
                 ?>"
                >
            </div>

            <ul class="rcmBrightcovePlayerTabs">
                <li XXXng-repeat="(key,playlist) in playlists">
                    {{playlist.videos.length | json}}
                    <a href="#tabs-{{key}}">{{playlist.name}}</a>
                </li>
            </ul>

            <div class="rcmBrightcovePlayerTabsContent"
                 XXXng-repeat="(tkey,tplaylist) in playlists">

                {{tplaylist.videos.length | json}}
                <div class="videoAreaWrap"
                     id="tabs-{{tkey}}"

                    >
                    <div ng-repeat="video in tplaylist.videos">

                        <a href="javascript:void(0);"
                           ng-click="videoClick(video.id)"
                           class="videoArea"
                            >
                            <table>
                                <tr>
                                    <td style="text-align: left;">
                                        <img ng-src="{{video.thumbnailURL}}"
                                             width="135px" height="70px"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span class="title">
                                            <p style="text-decoration: none; color: #00a4e4; font-weight: bold; font-size: 10px;">
                                                {{video.name}}
                                            </p>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span class="description">
                                            <p style="text-decoration: none;font-size: 10px;">
                                                {{video.shortDescription}}
                                            </p>
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
