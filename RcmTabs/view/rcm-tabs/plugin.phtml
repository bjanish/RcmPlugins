    $lis .= '<li data-containerId="'.$container['id'].'" data-containerType="'.$container['type'].'"><a href="#tab_'.$this->instanceId.'_'.$container['id'].'">';
    $lis .= '<div data-richedit="tab_title_'.$container['id'].'">';
    $lis .= $this->ic['tab_title_'.$container['id']];
    $lis .= "</div>";
    $lis .= '</a></li>';
