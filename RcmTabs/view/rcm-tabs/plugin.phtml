<div class="tabs" id="rcmTabs_<?= $this->instanceId; ?>">
    <ul class="titleWrap">
        <?php foreach ($this->ic['containers'] as $tab) {
            if (empty($tab['type'])) {
                $tab['type'] = 'html';
            }
            include 'tab-title.phtml';
        } ?>
    </ul>
    <div class="bodyWrap">
        <?php foreach ($this->ic['containers'] as $tab) {
            switch ($tab['type']) {
            case 'html':
                include 'tab-body-html.phtml';
                break;
            case 'rawHtml':
                include 'tab-body-raw-html.phtml';
                break;
            default:
                throw new \RuntimeException(
                    $tab['type'] . ' is an invalid tab type'
                );
            }
        } ?>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#rcmTabs_<?=  $this->instanceId; ?>').tabs();
    })
</script>
