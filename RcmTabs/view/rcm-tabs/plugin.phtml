<?php
//Setup the tabs
$titles = '';
$bodies = '';

foreach ($this->ic['containers'] as $container) {
    $titles
        .= '<li class="title" data-tabId="' . $container['id']
        . '" data-containerType="'
        . $container['type'] . '"><a href="#tab_' . $this->instanceId . '_'
        . $container['id'] . '">';
    $titles .= '<div data-textEdit="tab_title_' . $container['id'] . '">';
    $titles .= $this->ic['tab_title_' . $container['id']];
    $titles .= "</div>";
    $titles .= '</a></li>';
    $bodies
        .= '<div id="tab_' . $this->instanceId . '_' . $container['id'] . '">';

    if ($container['type'] == 'html') {
        $bodies .= '<div class="body" data-tabId="'.$container['id'].'" data-richedit="tab_content_'
            . $container['id'] . '">';
        $bodies .= $this->ic['tab_content_' . $container['id']];
        $bodies .= "</div>";
    }

    $bodies .= "</div>";
}

