    if ($container['type'] == 'html') {
        $divs .= '<div data-richedit="tab_content_'.$container['id'].'">';
        $divs .= $this->ic['tab_content_'.$container['id']];
        $divs .= "</div>";
    }

    $divs .= "</div>";
}

