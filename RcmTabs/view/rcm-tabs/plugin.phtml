<div class="tabs" id="rcmTabs_<?= $this->instanceId; ?>">
    <ul class="titleWrap">
        <?= $titles; ?>
    </ul>
    <?= $bodies ?>
</div>


<script type="text/javascript">
    $(function () {
        $('#rcmTabs_<?=  $this->instanceId; ?>').tabs();
    })
</script>
